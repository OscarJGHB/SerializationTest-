<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.BookManager.gui.FXMLController">

        <AnchorPane
            AnchorPane.topAnchor="0"
            AnchorPane.bottomAnchor="0"
            AnchorPane.rightAnchor="0"
            AnchorPane.leftAnchor="0">
            <HBox fx:id="toolBarHBox"
                AnchorPane.leftAnchor="0"
                AnchorPane.topAnchor="0">
                <MenuBar fx:id="menuBar" styleClass="main_menu-bar">
                    <Menu fx:id="fileOptionsMenu" text="File">
                        <MenuItem fx:id = "filesOptionsMenuItem0" text="New Library" onAction="#makeBlankLibrary"/>
                        <MenuItem fx:id = "filesOptionsMenuItem1" text="Import Library" onAction="#importLibrary"/>
                        <MenuItem fx:id = "filesOptionsMenuItem2" text="Save Library" onAction="#saveCurrentLibrary"/>
                        <MenuItem fx:id = "filesOptionsMenuItem3" text="Save As" onAction="#saveAsLibrary"/>
                    </Menu>
                    <Menu fx:id="generalOptionsMenu" text="Options">
                        <Menu fx:id="generalOptionsSubMenu0" text="Set Default File Format">
                            <MenuItem fx:id="generalOptionsSubMenuItem0" text=".xml" onAction="#setDefaultFileFormat"/>
                            <MenuItem fx:id="generalOptionsSubMenuItem1" text=".bin" onAction="#setDefaultFileFormat"/>
                            <MenuItem fx:id="generalOptionsSubMenuItem2" text=".csv" onAction="#setDefaultFileFormat"/>
                        </Menu>
                    </Menu>
                </MenuBar>
            </HBox>
            <Label fx:id="label"
                   AnchorPane.rightAnchor="0"
                   AnchorPane.bottomAnchor="0"/>
            <Label fx:id="defaultSerializationLabel"
                   AnchorPane.topAnchor="0"
                   AnchorPane.rightAnchor="0"/>
            <VBox
                alignment="CENTER"
                AnchorPane.topAnchor="100"
                >
                <Label  fx:id="instructionLabel"
                        styleClass="header"
                        />
                <Label text=
                       "&#10;&#9;Select the &quot;File&quot; option to either import or start a new file
                        &#10;&#9;Select the &quot;Options&quot; option to set your default file format(for serialization)"
                       styleClass="paragraph"/>
            </VBox>
        </AnchorPane>


        <AnchorPane fx:id="tablePane"
            AnchorPane.topAnchor="40"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0
"
            visible="false"
            disable="true">
            <TableView fx:id="bookTable"
                       AnchorPane.bottomAnchor="50"
                       AnchorPane.topAnchor="0"
                       AnchorPane.rightAnchor="0"
                       AnchorPane.leftAnchor="0" >
                <columns>
                    <TableColumn fx:id="titleCol" text="Title" prefWidth="120" />
                    <TableColumn fx:id="authorCol" text="Author" prefWidth="120" />
                    <TableColumn fx:id="yearCol" text="Year" prefWidth="120" />
                    <TableColumn fx:id="genreCol" text="Genre" prefWidth="120" />
                    <TableColumn fx:id="pictureCol" text="Picture" prefWidth="120" />
                </columns>
            </TableView>
            <TabPane fx:id="openLibrariesTabPane"
                     AnchorPane.bottomAnchor="25"
                     AnchorPane.leftAnchor="-5"
                     styleClass="open_tabs_bar"
            >
            </TabPane>
            <HBox alignment="BOTTOM_LEFT"
                AnchorPane.bottomAnchor="0">
                <Button fx:id="addBookButton" text="Add Book" onAction="#addABookToTable"/>
                <Button fx:id="deleteBookButton" text="Delete Book" onAction="#removeABookFromTable"/>
            </HBox>
        </AnchorPane>
</AnchorPane>